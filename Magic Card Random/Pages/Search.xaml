<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Magic_Card_Random.Pages.Search"
             Shell.NavBarIsVisible="False"
             Title="Search">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#273238" />
    </Page.Behaviors>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            <Label 
            Text="Search Card by Name"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <SearchBar x:Name="searchBar" Keyboard="Text" SearchButtonPressed="searchBar_SearchButtonPressed" Placeholder="Search a card..."></SearchBar>

            <Label x:Name="lblNotFound" Text="Card Not Found" IsVisible="false"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>