<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Magic_Card_Random.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Magic_Card_Random"
    xmlns:pages="clr-namespace:Magic_Card_Random.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Random Card" Icon="diced20solid.svg">
            <ShellContent 
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"
                /> 
        </Tab>
        <Tab Title="Information" Icon="usersolid.svg">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:AboutMe}"
                Route="AboutMe"
                />
        </Tab>
    </TabBar>

</Shell>
